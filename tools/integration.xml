<?xml version="1.0" encoding="UTF-8"?>
<gestemas>
  <samplingPeriod>120</samplingPeriod>
  <pointerEmulationRate>2</pointerEmulationRate>
  <pointerEmulationDistance>10.0</pointerEmulationDistance>
  <GlobalTarget>
    <GestureRecognizers>
      <LongPress id="1">
        <numTouchesRequired>1</numTouchesRequired>
        <minPressDuration>950</minPressDuration>
        <recognitionThreshold>10.0</recognitionThreshold>
        <abortList>
          <allowSimultaneousRecognition>false</allowSimultaneousRecognition>
        </abortList>
        <XTestAtomicBeganOrRecognized>
          <PressReleaseShortcut>
            <button>3</button>
          </PressReleaseShortcut>
        </XTestAtomicBeganOrRecognized>
      </LongPress>
      <LongPress id="2">
        <numTouchesRequired>2</numTouchesRequired>
        <minPressDuration>950</minPressDuration>
        <recognitionThreshold>10.0</recognitionThreshold>
        <abortList>
          <allowSimultaneousRecognition>false</allowSimultaneousRecognition>
        </abortList>
        <XTestMove>
          <MoveShortcut>
            <button modifier1="Alt_L">1</button>
          </MoveShortcut>
        </XTestMove>
      </LongPress>
      <Tap id="3">
        <numTouchesRequired>2</numTouchesRequired>
        <numTapsRequired>1</numTapsRequired>
        <maxTapDelay>1500</maxTapDelay>
        <maxTapDuration>1500</maxTapDuration>
        <maxTapDistance>1500.0</maxTapDistance>
        <bottomMargin>300.0</bottomMargin>
        <recognitionThreshold>10.0</recognitionThreshold>
        <abortList>
          <allowSimultaneousRecognition>false</allowSimultaneousRecognition>
        </abortList>
        <DBusVirtualKeyboard>
          <command>toggle</command>
        </DBusVirtualKeyboard>
      </Tap>
      <Pan id="4">
        <maxNumTouchesRequired>2</maxNumTouchesRequired>
        <minNumTouchesRequired>2</minNumTouchesRequired>
        <recognitionThreshold>20.0</recognitionThreshold>
        <abortList>
          <allowSimultaneousRecognition>true</allowSimultaneousRecognition>
          <id>7</id>
        </abortList>
        <XTestScroll>
          <minEffectiveVelocity>2.0</minEffectiveVelocity>
          <ScrollLeftShortcut>
            <key modifier1="Control_L">Left</key>
          </ScrollLeftShortcut>
          <ScrollRightShortcut>
            <key modifier1="Control_L">Right</key>
          </ScrollRightShortcut>
          <ScrollUpShortcut>
            <button>4</button>
          </ScrollUpShortcut>
          <ScrollDownShortcut>
            <button>5</button>
          </ScrollDownShortcut>
        </XTestScroll>
      </Pan>
      <Swipe id="5">
        <numTouchesRequired>1</numTouchesRequired>
        <maxDuration>150</maxDuration>
        <minDisplacement>60.0</minDisplacement>
        <maxAngle>40.0</maxAngle>
        <direction>Up</direction>
        <bottomMargin>300.0</bottomMargin>
        <recognitionThreshold>10.0</recognitionThreshold>
        <abortList>
          <allowSimultaneousRecognition>false</allowSimultaneousRecognition>
        </abortList>
        <DBusVirtualKeyboard>
          <command>showFromBottom</command>
        </DBusVirtualKeyboard>
      </Swipe>
      <Swipe id="6">
        <numTouchesRequired>1</numTouchesRequired>
        <maxDuration>150</maxDuration>
        <minDisplacement>60.0</minDisplacement>
        <maxAngle>40.0</maxAngle>
        <direction>Down</direction>
        <bottomMargin>300.0</bottomMargin>
        <recognitionThreshold>10.0</recognitionThreshold>
        <abortList>
          <allowSimultaneousRecognition>false</allowSimultaneousRecognition>
        </abortList>
        <DBusVirtualKeyboard>
          <command>hide</command>
        </DBusVirtualKeyboard>
      </Swipe>
    </GestureRecognizers>
  </GlobalTarget>
  <PublicTarget>
    <name>Firefox</name>
    <GestureRecognizers>
      <TwoTouchPinch id="7">
        <recognitionThreshold>20.0</recognitionThreshold>
        <abortList>
          <allowSimultaneousRecognition>true</allowSimultaneousRecognition>
          <id>4</id>
        </abortList>
        <XTestZoom>
          <minEffectiveVelocity>0.5</minEffectiveVelocity>
          <ZoomInShortcut>
            <button modifier1="Control_L">5</button>
          </ZoomInShortcut>
          <ZoomOutShortcut>
            <button modifier1="Control_L">4</button>
          </ZoomOutShortcut>
        </XTestZoom>
      </TwoTouchPinch>
    </GestureRecognizers>
  </PublicTarget>
  <PrivateTarget>
    <name>Konsole</name>
  </PrivateTarget>
  <PrivateTarget>
    <name>Okular</name>
    <GestureRecognizers>
      <Pan id="8">
        <maxNumTouchesRequired>3</maxNumTouchesRequired>
        <minNumTouchesRequired>3</minNumTouchesRequired>
        <recognitionThreshold>20.0</recognitionThreshold>
        <abortList>
          <allowSimultaneousRecognition>false</allowSimultaneousRecognition>
        </abortList>
        <XTestMove>
          <MoveShortcut>
            <button modifier1="Alt_L">1</button>
          </MoveShortcut>
        </XTestMove>
      </Pan>
    </GestureRecognizers>
  </PrivateTarget>
</gestemas>
